<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationDetailActivity">

  <android.widget.ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
  >
<!--    WRAPPER-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
<!--      TITLE & DONATION_COUNT-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="20dp"
          android:paddingHorizontal="12dp"
          android:paddingBottom="9dp"
      >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="16dp"
            android:textStyle="bold"
        />

        <TextView
            android:id="@+id/donationCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RpX.XXX.XXX"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#347FD6"
            android:layout_marginTop="8dp"
        />

        <TextView
            android:id="@+id/donationTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terkumpul dari RpX.XXX.XXX"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#767676"
            android:layout_marginTop="8dp"
            />
      </LinearLayout>

<!--      IMAGES-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="412dp"
      >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B6B6B6"
        />
      </LinearLayout>

<!--      DESCRIPTION-->
      <TextView
          android:id="@+id/description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Description"
          android:textSize="12dp"
          android:paddingVertical="8dp"
          android:paddingHorizontal="12dp"
      />

<!--      DETAILS-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="20dp"
          android:weightSum="3"
      >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
        >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
          >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_heart"
            />
            <TextView
                android:id="@+id/totalDonation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:paddingHorizontal="12dp"
            />
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Donasi"
          />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_news"
                />
            <TextView
                android:id="@+id/totalNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:paddingHorizontal="12dp"
                />
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Kabar Terbaru"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_money"
                />
            <TextView
                android:id="@+id/totalExpensesUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:paddingHorizontal="12dp"
                />
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Penggunaan Dana"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </android.widget.ScrollView>

  <!--    FOOTER-->
  <LinearLayout
      android:id="@+id/footer"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:weightSum="5"
      android:padding="16dp"
  >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/style_categories"
    >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/icon_share"
      />
    </LinearLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Donasi"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/style_donation_button"
    />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>