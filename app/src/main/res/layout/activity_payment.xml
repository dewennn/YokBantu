<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/previewImage"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    />
                <TextView
                    android:id="@+id/donationName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nama Donation"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <!--        Donation Ammount-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pilih jumlah yang ingin kamu beri:"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="13sp"
                    android:textColor="#347FD6"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/style_donation_ammount"
                        android:gravity="center"
                        android:text="10k"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#347FD6"
                        />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/style_donation_ammount"
                        android:gravity="center"
                        android:text="20k"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#347FD6"
                        android:layout_marginStart="12dp"
                        />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/style_donation_ammount"
                        android:gravity="center"
                        android:text="50k"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#347FD6"
                        android:layout_marginStart="12dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    >
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/style_donation_ammount"
                        android:gravity="center"
                        android:text="100k"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#347FD6"
                        />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/style_donation_ammount"
                        android:gravity="center"
                        android:text="250k"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#347FD6"
                        android:layout_marginStart="12dp"
                        />
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/style_donation_ammount"
                        android:gravity="center"
                        android:text="500k"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="#347FD6"
                        android:layout_marginStart="12dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <!--        Confirmation-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="atau atur jumlahnya sendiri ðŸ¤—"
                    android:gravity="center"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/inputDonation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:fontFamily="@font/manrope_semibold"
                    android:hint="Yok Bantu!"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:inputType="number"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    >
                    <CheckBox
                        android:id="@+id/checkboxSnk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saya menyutujui s&amp;k YokBantu"
                        android:fontFamily="@font/manrope_semibold"
                        android:textColor="#767676"
                        />
                </LinearLayout>
            </LinearLayout>


            <!--    FOOTER-->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:weightSum="5"
                android:padding="16dp"
                android:layout_marginTop="12dp"
            >

                <TextView
                    android:id="@+id/confirmationButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Konfirmasi"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/style_donation_button"
                    android:fontFamily="@font/manrope_bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.widget.ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>